<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <EditText
            android:id="@+id/SDsaveToPath"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="@string/filePathHint"
            android:text="/sdcard/" >

            <requestFocus />
        </EditText>

        <com.mjlim.hovernote.MLImageButton
            android:id="@+id/SDsaveButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:src="@drawable/save_white48" />
    </LinearLayout>

    <com.mjlim.hovernote.FilePicker
        android:id="@+id/filePicker1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" >
    </com.mjlim.hovernote.FilePicker>

</LinearLayout>